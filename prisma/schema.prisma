generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id            String @id @default(cuid())
  username      String
  password_hash String
}

model BookList {
  name  String @id
  books Book[]
}

model BookSeries {
  id    Int @id @default(autoincrement())
  books Book[]
}

model Book {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  name         String      @unique
  author       String
  coverImage   String?
  monthRead    Int?
  yearRead     Int?
  bookListName String?
  bookList     BookList?   @relation(fields: [bookListName], references: [name])
  rating       Rating?

  bookSeriesId Int?
  bookSeries   BookSeries? @relation(fields: [bookSeriesId], references: [id])
}

model Rating {
  stars   Float
  bookId  String  @unique
  comment String?
  book    Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
}
