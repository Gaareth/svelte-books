generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id            String @id @default(cuid())
  username      String
  password_hash String
}

model BookList {
  name  String @id
  books Book[]
}

model BookSeries {
  id    Int    @id @default(autoincrement())
  books Book[]
}

model BookApiData {
  id            String         @id
  title         String
  authors       String //TODO: author relation?
  subtitle      String?
  thumbnailUrl  String?
  isbn_13       String?
  pageCount     Int?
  categories    BookCategory[]
  publishedDate String? //YYYY-MM-DD
  publisher     String?
  language      String

  book Book[]
}

model BookCategory {
  name  String        @id
  books BookApiData[]
}

model OptionalDatetime {
  id       Int      @id @default(autoincrement())
  fullDate DateTime
  day      Int? // Optional day (1-31)
  month    Int? // Optional month (1-12)
  year     Int? // Optional year (e.g., 2024)

  hour   Int?
  minute Int?

  timezone String? // Optional timezone offset (e.g., "+02:00", "-05:00", "UTC")

  booksStarted  Book? @relation("dateStarted")
  booksFinished Book? @relation("dateFinished")
}

model Book {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name       String  @unique
  author     String
  coverImage String?

  monthRead Int?
  yearRead  Int?

  dateStarted    OptionalDatetime? @relation("dateStarted", fields: [dateStartedId], references: [id])
  dateFinished   OptionalDatetime? @relation("dateFinished", fields: [dateFinishedId], references: [id])
  dateStartedId  Int?              @unique
  dateFinishedId Int?              @unique

  bookListName String?
  bookList     BookList? @relation(fields: [bookListName], references: [name])
  rating       Rating?

  bookSeriesId Int?
  bookSeries   BookSeries? @relation(fields: [bookSeriesId], references: [id])

  bookApiData   BookApiData? @relation(fields: [bookApiDataId], references: [id])
  bookApiDataId String?

  wordsPerPage Int?
}

model Rating {
  stars   Float
  bookId  String  @unique
  comment String?
  book    Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
}
